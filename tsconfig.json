{
  "compileOnSave": false,
  "exclude": ["node_modules", "@types"],
  "include": ["./src/**/*", "./typings/**/*"],
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "target": "ES2015",
    "module": "ESNext",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@auth": ["./src/modules/auth/index"],
      "@auth/*": ["./src/modules/auth/*"],
      "@dashboard/user": ["./src/modules/dashboard/modules/user/index"],
      "@dashboard/user/*": ["./src/modules/dashboard/modules/user/*"],
      "@dashboard": ["./src/modules/dashboard/index"],
      "@dashboard/*": ["./src/modules/dashboard/*"]
    }
  }
}
